                               range_type="0" units="">
                               <control_options>size:20</control_options>
                               <default_value/>
                               <short_description>Manager Password</short_description>
                               <long_description>Password for Manager User defined above</long_description>
                               <validation_rule/>
                               <error_message/>
                               <gui_type>
                                      <string/>
                               </gui_type>
                       </element>
